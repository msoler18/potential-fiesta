<dialog
  id="modal-video-{{ section.id }}-js"
  class="video__modal"
>
  <div class="video__modal-wrapper">
    {%- if section.settings.video_url_section.type == 'youtube' -%}
      <iframe
        src="https://www.youtube.com/embed/{{ section.settings.video_url_section.id }}?enablejsapi=1"
        class="video__modal-youtube youtube"
        allow="autoplay; encrypted-media"
        allowfullscreen
        title="{{ section.settings.description | escape }}"
      ></iframe>
    {%- else -%}
      <iframe
        src="https://player.vimeo.com/video/{{ section.settings.video_url_section.id }}"
        class="video__modal-vimeo js-vimeo"
        allow="autoplay; encrypted-media"
        allowfullscreen
        title="{{ section.settings.description | escape }}"
      ></iframe>
    {%- endif -%}
  </div>
</dialog>
<span class="video__close">
  {% render 'icon-close' %}
</span>
