{% comment %}
  GTM

  Accepts:
  - position: {String} head or body - indicates whether the script to be
  injected is the one in the head or in the body.
  Both scripts are necessary for GTM functionality.

  Usage:
  {% render 'media-icons'
    position: 'head' | 'body'
  %}

{% endcomment %}

{% if settings.id_google_tag_manager != blank %}
  {% if position == "head" %}
    <!-- HEAD Google Tag Manager -->
    <script>
      (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push(
        {'gtm.start':new Date().getTime(),event:'gtm.js'}
      );var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src='https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);})(window,document,'script','dataLayer','{{ settings.id_google_tag_manager }}');
    </script>
    <!-- End Google Tag Manager -->
  {% elsif position == "body" %}
    <!-- BODY Google Tag Manager (noscript) -->
    <noscript>
      <iframe
        src="https://www.googletagmanager.com/ns.html?id={{ settings.id_google_tag_manager }}"
        height="0"
        width="0"
        style="display:none;visibility:hidden">
      </iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
  {% endif %}
{% endif %}
