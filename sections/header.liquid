{% liquid
  assign logo = section.settings.logo | image_url: width: 150
  assign alt_logo = 'Logo ' | append: shop.name
%}

{% capture content_logo %}
  {% if section.settings.logo != blank %}
    <img
      src="{{ logo }}"
      alt="{{ alt_logo }}"
      width="150"
      height="35"
    />
  {% else %}
    {{ shop.name }}
  {% endif %}
{% endcapture %}

<div class="header__logo">
  {% render 'link'
    url: routes.root_url,
    content: content_logo,
    title: alt_logo
  %}
</div>

{% render 'site-nav'
  linklist: section.settings.menu
%}

{% render 'user-nav' %}

{% render 'site-nav-mobile',
  linklistsAll: linklists[section.settings.menu]
%}

{% schema %}
{
  "name": "t:sections.header.name",
  "tag": "header",
  "class": "header sticky",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "t:sections.header.settings.logo.label"
    },
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "t:sections.header.settings.menu.label"
    },
    {
      "type": "image_picker",
      "id": "email_icon",
      "label": "Email icon"
    },
    {
      "type": "text",
      "id": "email_heading",
      "default": "Correo cotizaciones",
      "label": "Email Heading"
    },
    {
      "type": "text",
      "id": "email_quotes",
      "default": "contacto@promocionalesenstock.com.co",
      "label": "Quotes email"
    },
    {
      "type": "image_picker",
      "id": "wp_icon",
      "label": "Whatsapp icon"
    },
    {
      "type": "text",
      "id": "wp_heading",
      "default": "Tel√©fonos contacto",
      "label": "Whatsapp Heading"
    },
    {
      "type": "number",
      "id": "wp_quotes_first",
      "default": 3144895712,
      "label": "Quotes first number"
    },
    {
      "type": "number",
      "id": "wp_quotes_second",
      "default": 3187722655,
      "label": "Quotes second number"
    }
  ]
}
{% endschema %}
