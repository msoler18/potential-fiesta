{% comment %}
  Media icons

  Accepts:
  - order_media: {String} String with the social media name separated with " "

  Usage:
  {% render 'media-icons'
    order_media: 'facebook instagram linkedin'
  %}

{% endcomment %}

{%- assign order = order_media | default: settings.order_media -%}
{%- assign socials = order | split: ' ' -%}

<ul class="flex list-icons-social">
  {%- for social in socials -%}
  {% liquid
    capture render_icon
      case social
        when 'twitter'
          render 'icon-twitter'
        when 'facebook'
          render 'icon-facebook'
        when 'pinterest'
          render 'icon-pinterest'
        when 'instagram'
          render 'icon-instagram'
        when 'tiktok'
          render 'icon-tiktok'
        when 'tumblr'
          render 'icon-tumblr'
        when 'snapchat'
          render 'icon-snapchat'
        when 'youtube'
          render 'icon-youtube'
      endcase
    endcapture
  %}

  <!-- eslint-disable-next-line max-len -->
  {%- assign social_link = social | prepend: 'social_' | append: '_link' | downcase -%}
  {% if settings[social_link] != blank %}
    <li class="list-icons-social__item">
      <a
        href="{{ settings[social_link] | escape }}"
        title="{{ social | capitalize }}"
        target="_blank"
        rel="noreferrer"
      >
        {{ render_icon }}
        <span class="hidden">
          {{ social | capitalize }}
        </span>
      </a>
    </li>
  {% endif %}
  {%- endfor -%}
</ul>
